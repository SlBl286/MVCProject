
@model List<MVCProject.Models.NhanVien>
@using MVCProject.Controllers
@{
    Layout = null;
    var itemPerPage = ViewBag.itemPerPage;
    var currentPage = (string)@ViewBag.currentPage;
    var pageIndex = ViewBag.pageIndex;
    var pageNunber = (int)ViewBag.pageNumber;
}
<table  class="table table-striped table-hover table-responsiv">
    <thead>
        <tr>
            <th style="text-align: center;">
                MNV
            </th>
            <th style="text-align: center;">
                Họ Tên
            </th>
            <th style="text-align: center;">
                Ngày Sinh
            </th>
            <th style="text-align: center;">
                Số điện thoại
            </th>
            <th style="text-align: center;">
                Địa chỉ
            </th>
            <th style="text-align: center;">
                Chức vụ
            </th>
            <th style="text-align: center;">
                Số năm công tác
            </th>
            <th style="text-align: center;">
                Phòng Ban
            </th>
            <th style="width:180px;text-align: center;">
                Tùy Chọn
            </th>
        </tr>
    </thead>
    <tbody id="StaffTable">   
    @for (var i = itemPerPage * pageIndex; i < itemPerPage * (pageIndex + 1); i++)
    {

        @if ( i == Model.Count)
        {
            break;
        }
        <tr>
            <td>
                @Model[i].MaNhanVien

            </td>
            <td id="timKiem">
                @Model[i].HoTen

            </td>
            <td>

                @Model[i].NgaySinh.ToShortDateString()
            </td>
            <td>
                @Model[i].SoDienThoai
            </td>
            <td >
                @Model[i].DiaChi
            </td>
            <td>
                @Model[i].ChucVu
            </td>
            <td style="text-align: center;">
                @Model[i].SoNamCongTac
            </td>
            <td style="text-align: center;">
                @Model[i].PhongBan
            </td>
            <td>
                <button class="btn btn-info" onclick="showInPopup('@Url.Action("edit", "staff", new { id = Model[i].MaNhanVien }, Context.Request.Scheme)', 'Sửa Thông tin Nhân Viên')"><i class="fas fa-pen"></i> Sửa</button>
                <button type="button" class="btn btn-warning" data-toggle="modal" id="delbtn1" data-target="#NV-@Model[i].MaNhanVien"><i class="fas fa-trash-alt"></i> Xóa</button>
                <a href="#" class="demo">
                    <span class="glyphicon glyphicon-remove"></span>
                </a>
                <div class="modal" id="NV-@Model[i].MaNhanVien"  role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="false">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">

                                <h5 class="modal-title"> <i class='fas fa-exclamation-triangle fa-xs'></i> Bạn Có Chắc Muốn Xóa</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="Huy-@Model[i].MaNhanVien">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body ">
                                Nhân Viên <span style="color:red">@Model[i].HoTen</span>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                                <button class="btn btn-danger delBtn" id="@Model[i].MaNhanVien">Xóa</button>
                            </div>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
    }
       </tbody>
</table>
<div id="pagenav">
    <input type="number" id="pageNumber" value="@pageNunber" hidden />
    <input type="text" id="currentPage" value="@currentPage" hidden />
    <nav aria-label="Page navigation">
            <ul class="pagination pagination-lg justify-content-center" id="listPage">
                <li class="page-item " id="startList">
                    <a class="page-link " tabindex="-1" ><i class="fas fa-backward"></i></a>
                </li>
                <li class="page-item" id="endList">
                    <a class="page-link" tabindex="-1"><i class="fas fa-forward" ></i></a>
                </li>
            </ul>
    </nav>
</div>
<script src="~/js/staff/_table.js">
</script>