@model List<MVCProject.Models.NhanVien>
@using MVCProject.Controllers
@{
    ViewData["Title"] = "Danh Sách Nhân Viên";
}
@{ 
    var pageNunber = (int)Model.Count / 10;
    var pageIndex = 0;
    var Lastpage = 10 - (Model.Count - (pageNunber * 10));
}

<div>
    <div>
        <input id="SearchBox" type="search" class="form-control rounded" placeholder="Từ Khóa Cần Tìm" aria-label="Search" aria-describedby="search-addon" />
    </div>
    <h1>Danh Sách Nhân Viên</h1>
</div>
<div>
        <button class="btn btn-success btn" onclick="showInPopup('@Url.Action("create","staff",null,Context.Request.Scheme)','THÊM NHÂN VIÊN')"><i class="fas fa-plus"></i> Thêm Nhân Viên</button>
</div>
<br />
<table  class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                MNV
            </th>
            <th>
                Họ Tên
            </th>
            <th>
                Ngày Sinh
            </th>
            <th>
                Số điện thoại
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
                Chức vụ
            </th>
            <th>
                Số năm công tác
            </th>
            <th>
                Chức Năng
            </th>
        </tr>
    </thead>
    <tbody id="StaffTable">
        @for (var i = 10 * @pageIndex; i < Model.Count; i++)
        {
                @if(pageIndex == pageNunber)
                {
                   
                }
                <tr>
                    <td>
                        @Model[i].MaNhanVien

                    </td>
                    <td id="timKiem">
                        @Model[i].HoTen

                    </td>
                    <td>

                        @Model[i].NgaySinh.ToShortDateString()
                    </td>
                    <td>
                        @Model[i].SoDienThoai
                    </td>
                    <td>
                        @Model[i].DiaChi
                    </td>
                    <td>
                        @Model[i].ChucVu
                    </td>
                    <td style="text-align: center;">
                        @Model[i].SoNamCongTac
                    </td>
                    <td>
                        <button class="btn btn-info" onclick="showInPopup('@Url.Action("edit", "staff", new { id = Model[i].MaNhanVien }, Context.Request.Scheme)', 'Sửa Thông tin Nhân Viên')"><i class="fas fa-pen"></i> Sửa</button>
                        <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#NV-i"><i class="fas fa-trash-alt"></i> Xóa</button>
                        <div class="modal" id="NV-i" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="false">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">

                                        <h5 class="modal-title"> <i class='fas fa-exclamation-triangle fa-xs'></i> Bạn Có Chắc Muốn Xóa</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="Huy-@Model[i].MaNhanVien">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body ">
                                        Nhân Viên <span style="color:red">@Model[i].HoTen</span>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                                        <button class="btn btn-danger delBtn page-link-" id="@Model[i].MaNhanVien">Xóa</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
         }
        </tbody>
</table>
<input type="number" id="pageNumber" value="@pageNunber" hidden />
<nav aria-label="Page navigation">
    <ul class="pagination pagination-lg justify-content-center" id="listPage">
        <li class="page-item " id="startList">
            <a class="page-link" href="#" tabindex="-1"><i class="fas fa-backward"></i></a>
        </li>
        
        <li class="page-item">
            <a class="page-link" href="#"><i class="fas fa-forward"></i></a>
        </li>
    </ul>
</nav>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/staff/index.js"></script>
}
