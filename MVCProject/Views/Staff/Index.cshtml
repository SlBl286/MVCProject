@model List<MVCProject.Models.NhanVien>
@using MVCProject.Controllers
@{
    ViewData["Title"] = "Danh Sách Nhân Viên";
}
@{ 
    var itemPerPage = ViewBag.itemPerPage;
}

<div>
    <div>
        <input id="SearchBox" type="search" class="form-control rounded" placeholder="Từ Khóa Cần Tìm" aria-label="Search" aria-describedby="search-addon" />
    </div>
    <h1>Danh Sách Nhân Viên</h1>
</div>
<div>
        <button class="btn btn-success " onclick="showInPopup('@Url.Action("create","staff",null,Context.Request.Scheme)','THÊM NHÂN VIÊN')"><i class="fas fa-plus"></i> Thêm Nhân Viên</button>
        <button class="btn btn btn-outline-success float-right" id="excelExport"><i class="fas fa-file-excel"></i> Xuất File Excel</button>
</div>
<br />
<table  class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                MNV
            </th>
            <th>
                Họ Tên
            </th>
            <th>
                Ngày Sinh
            </th>
            <th>
                Số điện thoại
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
                Chức vụ
            </th>
            <th>
                Số năm công tác
            </th>
            <th>
                Chức Năng
            </th>
        </tr>
    </thead>
    <tbody id="StaffTable">   
        </tbody>
</table>

<div id="pagenav">
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/staff/index.js"></script>
}
