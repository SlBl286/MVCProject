@model List<SelectListItem>
@using MVCProject.Controllers
@{
    ViewData["Title"] = "Danh Sách Nhân Viên";
}
<input type="number" id="PhongBanId" value="@ViewBag.PhongBanId" hidden />
<button class="btn btn-success " onclick="showInPopup('@Url.Action("create","staff",null,Context.Request.Scheme)','THÊM NHÂN VIÊN')"><i class="fas fa-plus"></i> Thêm Nhân Viên</button>
<br />
<br />
<div>
    <div>      
            <form action="advandSearch" method="post" id="advandSearch">
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <input id="SearchBox" type="search" class="form-control rounded" placeholder="Tên Hoặc Địa Chỉ Cần Tìm" aria-label="Search"
                            aria-describedby="search-addon" />
                    </div>
                    
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="chucVuSearch" class="form-label">Chức Vụ</label>
                        <select class="form-control" id="chucVuSearch"  asp-items="@(new SelectList(@Model,"Value","Text"))">
                            <option value="" selected>-- Tất Cả --</option>
                        </select>
                    </div>
                    <div class="form-group col-md-2">
                        <label for="minRange" class="form-label" style="width:150px">Số Năm Công Tác</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon2">từ : </span>
                            </div>
                            <input type="number" class="form-control" value="0" id="minRange">
                        </div>     
                    </div>
                    
                    <div class="form-group col-md-2">
                        <label for="maxRange" class="form-label">&nbsp;</label>
                        <div class="input-group ">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon2">đến : </span>
                            </div>
                            <input type="number" class="form-control" value="100" id="maxRange">
                        </div>
                        
                    </div>
                    
                    <div class="col-md-1"></div>
                    <div class="col-md-1">
                        <label for="" class="form-label"></label>
                        <button type="reset" class="form-control btn btn-outline-secondary btn-lg" id="resetSearch">RESET</button>
                    </div>
                 <div class="form-group col-md-2">
                     <label for="" class="form-label"></label>
                        <button type="submit" class="form-control btn btn-outline-primary btn-lg" id="searchBtn">Tìm Kiếm</button>
                </div>
                <p id="ErrorMgs" style="color:red;width:30vw"></p>
             </div> 
            
            </form>
    </div>
    <br />
    <h1>Danh Sách Nhân Viên</h1>
</div>
<div class="row">
    <div class="col-5">
        <select class="custom-select" id="chonPhongBan" style="width:20vw;" asp-items="@(new SelectList(@ViewBag.dsPhongBan,"id","TenPhongBan"))">
            <option value="0" selected>Chọn Phòng Ban</option>
        </select>
    </div>
    <div class="col-5">
        <div class="input-group float-right">
            <div class="custom-file ">
                <input type="file" class="custom-file-input" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04">
                <label class="custom-file-label" for="inputGroupFile04"></label>
            </div>
            <div class="input-group-append bg-gradient-primary">
                <button class="btn btn-outline-primary " type="button" id="inputGroupFileAddon04"><i class="fas fa-file-excel"></i>  Nhập Dữ Liệu</button>
            </div>
        </div>
    </div>
    <div class="col-2 float-right">
        <a class="btn btn-outline-success float-right" asp-action="downloadFile" asp-asp-controller="staff"><i class="fas fa-file-excel"></i> Xuất Dữ Liệu</a> 
    </div>
</div>    

<br />
<input type="number" id="pageNumberIndex" value="@ViewBag.pageNumberIndex" hidden />
<div id="tablePartial">

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/staff/index.js"></script>
}
