@model List<MVCProject.Models.NhanVien>
@using MVCProject.Controllers
@{
    ViewData["Title"] = "Danh Sách Nhân Viên";
    var temp = ViewData["temp"] as NhanVien;
}
<div>
    <form asp-action="index" method="post" class="input-group">
        <input name="key" type="search" class="form-control rounded" placeholder="Từ Khóa Cần Tìm" aria-label="Search"
               aria-describedby="search-addon" />
        <button type="submit" class="btn btn-outline-primary">Tìm</button>
    </form>
    <h1>Danh Sách Nhân Viên</h1>
</div>
<div>
        <button class="btn btn-success btn" onclick="showInPopup('@Url.Action("create","staff",null,Context.Request.Scheme)','THÊM NHÂN VIÊN')"><i class="fas fa-plus"></i> Thêm Nhân Viên</button>
</div>
<br />
<table  class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                MNV
            </th>
            <th>
                Họ Tên
            </th>
            <th>
                Ngày Sinh
            </th>
            <th>
                Số điện thoại
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
                Chức vụ
            </th>
            <th>
                Số năm công tác
            </th>
            <th>
                Chức Năng
            </th>
        </tr>
    </thead>
    <tbody id="StaffTable">
        @foreach (var item in Model)
        {
            var i = 1;
            <tr >
                <td >
                    @item.maNhanVien

                </td>
                <td id="timKiem">
                    @item.hoTen

                </td>
                <td>

                    @item.ngaySinh.ToShortDateString()
                </td>
                <td>
                    @item.soDienThoai
                </td>
                <td >
                    @item.diaChi
                </td>
                <td>
                    @item.chucVu
                </td>
                <td style="text-align: center;">
                    @item.soNamCongTac
                </td>
                <td>
                    <button class="btn btn-info" onclick="showInPopup('@Url.Action("edit","staff",new { id = @item.maNhanVien},Context.Request.Scheme)', 'Sửa Thông tin Nhân Viên')"><i class="fas fa-pen"></i> Sửa</button>
                    <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#NV-@Model.IndexOf(item)"><i class="fas fa-trash-alt"></i> Xóa</button>
                    <div class="modal" id="NV-@Model.IndexOf(item)" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="false">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                   
                                    <h5 class="modal-title"> <i class='fas fa-exclamation-triangle fa-xs'></i> Bạn Có Chắc Muốn Xóa</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="Huy-@item.maNhanVien">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    Nhân Viên <span style="color:red">@item.hoTen</span>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                                    <button class="btn btn-danger delBtn" id="@item.maNhanVien">Xóa</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/staff/index.js"></script>
}
