@model List<MVCProject.Models.NhanVien>
@using MVCProject.Controllers
@{
    ViewData["Title"] = "Danh Sách Nhân Viên";
}
@{ 
    var itemPerPage = ViewBag.itemPerPage;
    var pageNunber = (int)Model.Count / itemPerPage;
}

<div>
    <div>
        <input id="SearchBox" type="search" class="form-control rounded" placeholder="Từ Khóa Cần Tìm" aria-label="Search" aria-describedby="search-addon" />
    </div>
    <h1>Danh Sách Nhân Viên</h1>
</div>
<div>
        <button class="btn btn-success btn" onclick="showInPopup('@Url.Action("create","staff",null,Context.Request.Scheme)','THÊM NHÂN VIÊN')"><i class="fas fa-plus"></i> Thêm Nhân Viên</button>
</div>
<br />
<table  class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                MNV
            </th>
            <th>
                Họ Tên
            </th>
            <th>
                Ngày Sinh
            </th>
            <th>
                Số điện thoại
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
                Chức vụ
            </th>
            <th>
                Số năm công tác
            </th>
            <th>
                Chức Năng
            </th>
        </tr>
    </thead>
    <tbody id="StaffTable">   
        </tbody>
</table>
<input type="number" id="pageNumber" value="@pageNunber" hidden />
<nav aria-label="Page navigation">
    <ul class="pagination pagination-lg justify-content-center" id="listPage">
        <li class="page-item " id="startList">
            <a class="page-link " tabindex="-1" ><i class="fas fa-backward"></i></a>
        </li>
        
        <li class="page-item" id="endList">
            <a class="page-link" tabindex="-1"><i class="fas fa-forward" ></i></a>
        </li>
    </ul>
</nav>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/staff/index.js"></script>
}
