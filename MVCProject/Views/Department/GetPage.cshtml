
@model List<MVCProject.Models.PhongBan>
@using MVCProject.Controllers
@{
    Layout = null;
    var itemPerPage = ViewBag.itemPerPage;
    var pageIndex = ViewBag.pageIndex;
    var pageNunber = (int)Model.Count / itemPerPage;

}

@for (var i = itemPerPage * pageIndex; i < itemPerPage * (pageIndex + 1); i++)
{

    @if (pageIndex == pageNunber && i == Model.Count)
    {
        break;
    }
    <tr>
         <td  style="text-align: center;">
              @Model[i].id
              </td>
        <td id="tenPhong" style="text-align: center;">
            @Model[i].TenPhongBan

        </td>
        <td style="text-align: center;">     
            <button class="btn btn-info" onclick="showInPopup('@Url.Action("edit", "department", new { id = (int)@Model[i].id }, Context.Request.Scheme)', 'Sửa Thông tin Phòng Ban')"><i class="fas fa-pen"></i> Sửa</button>
            <button type="button" class="btn btn-warning" data-toggle="modal" id="delbtn1" data-target="#NV-@i"><i class="fas fa-trash-alt"></i> Xóa</button>
            <a class="btn btn-secondary" href="/staff/index"><i class="far fa-list-alt"></i> Danh Sách Nhân Viên</a>
            <a href="#" class="demo">
                <span class="glyphicon glyphicon-remove"></span>
            </a>
            <div class="modal" id="NV-@i"  role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="false">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">

                            <h5 class="modal-title"> <i class='fas fa-exclamation-triangle fa-xs'></i> Bạn Có Chắc Muốn Xóa</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="Huy-@i">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body ">
                            <span style="color:red">@Model[i].TenPhongBan</span>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                            <button class="btn btn-danger delBtn" id="@i">Xóa</button>
                        </div>
                    </div>
                </div>
            </div>
        </td>
    </tr>
}
<script src="~/js/department/getpage.js"></script>