@model MVCProject.Models.PhongBan
@using MVCProject.Controllers

@{
    ViewData["Title"] = "Thêm Mới Phòng Ban";
    Layout = "_LayoutWithoutNav";
}

<div class="row justify-content-center align-items-center" id="FormContainer">
    <div class="col-md-12">
        <form id="CreateForm" asp-action="create" asp-controller="department" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
            <div class="form-group">
                <label asp-for="TenPhongBan" class="control-label"></label>
                <input asp-for="TenPhongBan" class="form-control" />
                <span asp-validation-for="TenPhongBan" class="text-danger"></span>

            </div>
            <p id="ErrorMgs" style="color:red;"></p>
            <div class="form-group">
                <button type="submit" class="btn btn-success" id="SubmitBtn" >Thêm Mới</button>
                <button class="btn btn-success" type="submit" id="SavingtBtn" disabled hidden>
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    Đang Lưu...
                </button>
            </div>
            
        </form>

    </div>
</div>

<div>
    <a href="#" data-dismiss="modal">Trở Lại Danh Sách</a>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/department/create.js"></script>
}
